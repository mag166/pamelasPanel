<p id="notice"><%= notice %></p>

<h1>All Cohorts</h1>

<table class="table table-striped ">
  <thead class="thead-light">
    <tr>
      <th>Course</th>
      <th>Cohort</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cohorts.each do |cohort| %>
      <tr>
        <td><%= cohort.course.name %></td>
        <td><%= cohort.name %></td>
        <td><%= cohort.start_date %></td>
        <td><%= cohort.end_date %></td>
        <%if cohort.teacher%>
          <td><%= cohort.teacher.first_name + " " + cohort.teacher.last_name %></td>
        <%else%>
          <td><%=""%></td>
        <%end%>

        <td><%= link_to 'Show', cohort %></td>
        <td><%= link_to 'Edit', edit_cohort_path(cohort) %></td>
        <td><%= link_to 'Destroy', cohort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cohort', new_cohort_path, class: "btn btn-primary" %>
