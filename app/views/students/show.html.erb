<p id="notice"><%= notice %></p>
<div class="jumbotron">

<h1 class="display-7"><%="Student Information:"%></h1>
<p>
  <strong>First name:</strong>
  <%= @student.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @student.last_name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @student.age %>
</p>

<p>
  <strong>Education:</strong>
  <%= @student.education %>
</p>

  <p class="lead">
    <%= link_to 'Edit', edit_student_path(@student), class: "btn btn-primary" %> |
    <%= link_to 'Back', :back, class: "btn btn-primary" %> 
</div>


<h2> Student Cohorts </h2>
<table class="table table-striped ">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cohorts.each do |cohort| %>
      <tr>
        <td><%= cohort.name %></td>
        <td><%= cohort.start_date %></td>
        <td><%= cohort.end_date %></td>
        <td><%= cohort.course.name %></td>
        <td><%= link_to 'Show', cohort %></td>
      <!--  <td><%= link_to 'Edit', edit_cohort_path(cohort) %></td>
        <td><%= link_to 'Destroy', cohort, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
