<p id="notice"><%= notice %></p>
<div class="jumbotron">

<h1 class="display-7"><%="Instructor Information:"%></h1>
<p>
  <strong>First name:</strong>
  <%= @teacher.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @teacher.last_name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @teacher.age %>
</p>

<p>
  <strong>Education:</strong>
  <%= @teacher.education %>
</p>

<p>
  <strong>Salary:</strong>
  <%= "$#{@teacher.salary}"%>
</p>

  <p class="lead">
    <%= link_to 'Edit', edit_teacher_path(@teacher), class: "btn btn-primary" %> |
    <%= link_to 'Back', :back, class: "btn btn-primary" %> 
</div>



<h2> Teacher Cohorts </h2>
<table class="table table-striped">
  <thead class="thead-light">
    <tr>
      <th>Course</th>
      <th>Cohort</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cohorts.each do |cohort| %>
      <tr>
        <td><%= cohort.course.name %></td>
        <td><%= cohort.name %></td>
        <td><%= cohort.start_date %></td>
        <td><%= cohort.end_date %></td>
        <td><%= link_to 'Show', cohort %></td>
   <!--     <td><%= link_to 'Edit', edit_cohort_path(cohort) %></td>
        <td><%= link_to 'Destroy', cohort, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>
